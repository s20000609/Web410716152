@model Web410716152.ViewModel.SignUpData





<h2>會員註冊</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{

    <p>@Html.DisplayNameFor(a => a.Name):@Html.TextBoxFor(m => m.Name) @Html.ValidationMessageFor(m => m.Name)</p>
    <p>@Html.DisplayNameFor(a => a.Account):@Html.TextBoxFor(m => m.Account) @Html.ValidationMessageFor(m => m.Account)</p>
    <p>@Html.DisplayNameFor(a => a.Password):@Html.PasswordFor(m => m.Password) @Html.ValidationMessageFor(m => m.Password)</p>
    <p> @Model.Message</p>
    <input type="submit" name="name" value="註冊" />
}